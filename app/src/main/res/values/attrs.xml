<resources>

    <declare-styleable name="colors">
        <!-- Color for foreground elements like cards, ListView items or menus-->
        <attr name="foreground" format="color"/>
        <!-- Color for the layout background-->
        <attr name="backgroundColor" format="color"/>
        <!--the ohdm color for accents-->
        <attr name="accent" format="color"/>
        <!-- Color for primary Buttons-->
        <attr name="primary" format="color"/>
        <!-- Color for secondary Buttons-->
        <attr name="secondary" format="color"/>
        <!-- Color for primary texts-->
        <attr name="text" format="color"/>

    </declare-styleable>

    <declare-styleable name="drawables">
        <attr name="bottom_nav_icon_map_download" format="reference" />
        <attr name="bottom_nav_icon_home" format="reference" />
        <attr name="bottom_nav_icon_navigation" format="reference" />
        <attr name="edit_text_background" format="reference" />
    </declare-styleable>
</resources>
