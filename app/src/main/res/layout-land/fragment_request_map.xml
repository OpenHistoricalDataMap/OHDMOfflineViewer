<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:backgroundTintMode="add">

    <android.support.constraint.ConstraintLayout
        android:id="@id/outer_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/request_button"
            app:layout_constraintEnd_toStartOf="@+id/content_card_date_picer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_et">

            <EditText
                android:id="@+id/coord_x2_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="1dp"
                android:background="?attr/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="X2"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/content_card_coordinates"
                app:layout_constraintTop_toTopOf="@+id/content_card_coordinates" />

            <EditText
                android:id="@+id/coord_x4_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="X4"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/content_card_coordinates"
                app:layout_constraintEnd_toStartOf="@+id/content_card_coordinates"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/coord_x3_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="1dp"
                android:background="?attr/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="X3"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/content_card_coordinates"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/content_card_coordinates" />

            <EditText
                android:id="@+id/coord_x1_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="X1"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                app:layout_constraintEnd_toStartOf="@+id/content_card_coordinates"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/content_card_coordinates" />

            <EditText
                android:id="@+id/coord_y2_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="Y2"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                app:layout_constraintBottom_toTopOf="@+id/content_card_coordinates"
                app:layout_constraintEnd_toEndOf="@+id/content_card_coordinates"
                app:layout_constraintStart_toEndOf="@+id/coord_y1_et"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/content_card_coordinates"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="40dp"
                android:background="?attr/foreground"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/foreground"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="center"
                    android:text="Enter longitude and latitude for each corner of the map"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="@dimen/primary_font_size"
                    android:typeface="normal" />
            </android.support.v7.widget.CardView>

            <EditText
                android:id="@+id/coord_y3_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="1dp"
                android:background="?attr/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="Y3"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/content_card_coordinates"
                app:layout_constraintStart_toEndOf="@+id/coord_y4_et"
                app:layout_constraintTop_toBottomOf="@+id/content_card_coordinates" />

            <EditText
                android:id="@+id/coord_y1_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="Y1"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                app:layout_constraintBottom_toTopOf="@+id/content_card_coordinates"
                app:layout_constraintEnd_toStartOf="@+id/coord_y2_et"
                app:layout_constraintStart_toStartOf="@+id/content_card_coordinates"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/coord_y4_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="1dp"
                android:background="?attr/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="Y4"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/coord_y3_et"
                app:layout_constraintStart_toStartOf="@+id/content_card_coordinates"
                app:layout_constraintTop_toBottomOf="@+id/content_card_coordinates" />
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/content_card_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/foreground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/info_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="@dimen/card_inner_margin"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="center"
                    android:text="@string/request_map_info"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="@dimen/primary_font_size"
                    android:typeface="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <EditText
            android:id="@+id/name_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/edit_text_background"
            android:ems="10"
            android:fontFamily="@font/comfortaa"
            android:hint="enter a name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="?attr/textColorPrimary"
            android:textColorHint="?attr/textColorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_card_info" />


        <android.support.v7.widget.CardView
            android:id="@+id/content_card_date_picer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/foreground"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/name_et">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/foreground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <DatePicker
                    android:id="@+id/simpleDatePicker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:datePickerMode="spinner"
                    android:outlineSpotShadowColor="?attr/textColorPrimary"
                    android:yearListSelectorColor="?attr/textColorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/request_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/primary_button_height"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/primary_button"
            android:elevation="10dp"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="Submit Request"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_card_date_picer" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>